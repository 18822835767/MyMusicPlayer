<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:max="100"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    
    <ImageView
        android:id="@+id/music_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/play_control"
        android:layout_margin="2dp"
        android:background="@drawable/album"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/music_picture"
        android:layout_alignTop="@id/music_picture">
        <TextView
            android:id="@+id/music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/music_name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/singer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/singer"/>
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/play_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_list"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/music_picture"/>
    
    <RelativeLayout
        android:id="@+id/play_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar">
        
        <ImageButton
            android:id="@+id/pre_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pre_one"
            android:layout_toStartOf="@id/play_or_pause"
            android:layout_marginTop="5dp"/>
        
        <Button
            android:id="@+id/play_or_pause"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/music_play"
            android:background="#E0FFFF"/>
        
        <ImageButton
            android:id="@+id/next_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_one"
            android:layout_toEndOf="@id/play_or_pause"
            android:layout_marginTop="6dp"/>
        
        <ImageButton
            android:id="@+id/play_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/order_play"
            android:layout_toStartOf="@id/pre_one"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="8dp"/>

        
    </RelativeLayout>

</RelativeLayout>
