<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:max="100"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    
    <ImageView
        android:id="@+id/music_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/play_control"
        android:layout_margin="2dp"
        android:background="@drawable/one"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/music_picture"
        android:layout_alignTop="@id/music_picture">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="周杰伦"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="说好的幸福呢"/>
    </LinearLayout>
    
    <ImageButton
        android:id="@+id/music_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/music_list"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/music_picture"/>
    
    <LinearLayout
        android:id="@+id/play_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:gravity="center">
        
        <ImageButton
            android:id="@+id/pre_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pre_one" 
            android:layout_marginEnd="20dp"/>

        <ImageButton
            android:id="@+id/play_or_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/music_play"
            android:layout_toStartOf="@id/music_list" />


        <ImageButton
            android:id="@+id/next_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/next_one" 
            android:layout_marginStart="20dp"/>
        
    </LinearLayout>

</RelativeLayout>
